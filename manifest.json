{
  "name": "Let Me Watch It 4 U",
  "description": "No more wasted time watching useless lessons",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [  
    {  
      "matches": ["http://*/*", "https://*/*"],  
      "js": ["jquery.min.js", "content_script.js"]  
    }  
  ], 
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{ 
    "resources": ["icon.png", "sound.mp3"],
    "matches": ["http://*/*", "https://*/*"]
  }],
  "permissions": [
    "notifications",
    "storage",
    "tabs"
  ]
}
